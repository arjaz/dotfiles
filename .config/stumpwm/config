    '(("(.*[Cc]hromium|[Ff]irefox|TelegramDesktop)"
       ("M-w"   . "C-c")
       ("C-y"   . "C-v")
       ("C-s"   . "C-f")
       ("C-n"   . "Down")
       ("C-p"   . "Up")
       ;; ("C-f"   . "Right")
