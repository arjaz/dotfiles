       ;; ("M-<"   . "Home")
       ;; ("M->"   . "End")
       ;; ("C-k"   . ("C-S-End" "C-x"))
       )))

(require :slynk)
(slynk:create-server
  :port 43232
  :style slynk:*communication-style*
  :dont-close t)

(run-shell-command "eww open bar &")
